{% extends 'FsbAlfredDashboardBundle::base.html.twig' %}

{% form_theme form 'FsbAlfredDashboardBundle:Form:bootstrap.html.twig' %}

{% block content %}
    <form action='{{ path('fsb_alfred_dashboard_page_reset_password', { 'username': username, 'token': token }) }}' method='post' {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <div class='form-group'>
            <input type='submit' class='btn btn-success' name='submit' value='Modifier' />
        </div>
    </form>
{% endblock %}
