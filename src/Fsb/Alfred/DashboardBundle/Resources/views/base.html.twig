<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>{% block title %}Alfred{% endblock %}</title>
        {% block stylesheets %}
            <link rel='stylesheet' href='{{ asset('bundles/fsbalfreddashboard/css/vendor/bootstrap/bootstrap-3.2.0.min.css') }}' />
            <link rel='stylesheet' href='{{ asset('bundles/fsbalfreddashboard/css/app.min.css') }}' />
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <section id='main-container'>
                {% block navbar_wrapper %}
                    <nav id='site-top-navbar' class='navbar navbar-default navbar-fixed-top'>
                        {% block navbar %}
                            <a href='{{ path('fsb_alfred_dashboard_homepage') }}' class='navbar-brand'>Alfred</a>
                        {% endblock %}
                    </nav>
                {% endblock %}
                {% block main_container %}
                    {% block pre_wrapper %}{% endblock %}
                    {% block site_content_wrapper %}
                        <section id='site-content-wrapper' class='wrapper container-fluid' {#{% if app.user and app.user.color %}style='background-color: {{ app.user.color }}'{% endif %}#}>
                            {% for type, messages in app.session.flashbag.all %}
                                {% for message in messages %}
                                    <div class='alert alert-{{ type }} alert-dismissable'>
                                        <a href='#' data-dismiss='alert' class='close' aria-hidden='true'>&times;</a>
                                        <div>{{ message|trans }}</div>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            {% block header %}
                                <header id='site-header'>
                                    <h1 id='site-title'>{% block site_title %}Alfred - Your private car butler{% endblock %}</h1>
                                </header>
                            {% endblock %}
                            {% block site_content %}
                                <div class='site-content'>{% block content %}{% endblock %}</div>
                            {% endblock %}
                        </section>
                    {% endblock %}
                {% endblock %}
            </section>
        {% endblock %}
        {% block javascripts %}
            <script src='{{ asset('bundles/fsbalfreddashboard/js/vendor/jquery/jquery-2.1.1.min.js') }}'></script>
            <script src='{{ asset('bundles/fsbalfreddashboard/js/plugins.js') }}'></script>
            <script src='{{ asset('bundles/fsbalfreddashboard/js/vendor/bootstrap/bootstrap-3.2.0.min.js') }}'></script>
        {% endblock %}
    </body>
</html>
